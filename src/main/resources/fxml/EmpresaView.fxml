<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <SplitPane dividerPositions="0.5" prefHeight="400.0" prefWidth="600.0">
          <items>
              <ListView fx:id="empresaList" prefHeight="200.0" prefWidth="200.0" />
              <GridPane hgap="5.0" vgap="5.0">
                  <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  </columnConstraints>
                  <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                  <Label text="Id Empresa:" />
                      <Label text="NIF:" GridPane.rowIndex="1" />
                      <Label text="Nombre empresa:" GridPane.rowIndex="2" />
                      <Label text="Dirección:" GridPane.rowIndex="3" />
                      <Label text="Tipo:" GridPane.rowIndex="4" />
                  <Label text="Nombre tutor:" GridPane.rowIndex="5" />
                  <Label text="Apellidos tutor:" GridPane.rowIndex="6" />
                  <Label text="Telefono tutor:" GridPane.rowIndex="7" />
                  <Label text="Email tutor:" GridPane.rowIndex="8" />
                  <TextField fx:id="idEmpresaText" GridPane.columnIndex="1" />
                      <TextField fx:id="nifText" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                      <TextField fx:id="nombreEmpresaText" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                      <TextField fx:id="direccionEmpresaText" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                      <TextField fx:id="tipoEmpresaText" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="nombreTutorEText" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <TextField fx:id="apellidosTutorEtext" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <TextField fx:id="telefonoTutorEText" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                  <TextField fx:id="emailTutorEtext" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                  </children>
                  <padding>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
              </GridPane>
          </items>
      </SplitPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onAddAction" text="Añadir" />
            <Button mnemonicParsing="false" onAction="#onDeleteAction" text="Eliminar" />
            <Button mnemonicParsing="false" onAction="#onSearchAction" text="Buscar" />
            <Button mnemonicParsing="false" onAction="#onUpdateAction" text="Actualizar" />
            <Button mnemonicParsing="false" onAction="#onCloseAction" text="Cerrar" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
